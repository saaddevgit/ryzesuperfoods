{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
  }

  @media screen and (max-width: 749px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top_mobile }}px;
      padding-bottom: {{ section.settings.padding_bottom_mobile }}px;
    }
  }
{%- endstyle -%}

<div class="custom-marquee section-{{ section.id }}-padding" style="background: {{ section.settings.bg }}; color: {{ section.settings.fg }};">
  {% for i in (1..5) %}
    <div class="custom-marquee-wrapper">
      {% for block in section.blocks %}
        {% if block.settings.text %}
        <p class="custom-marquee-text" style="{% if section.settings.bold %}font-weight: bold;{% endif %}{% if section.settings.small %}font-size: 14px;{% endif %}">
          {{ block.settings.text | upcase }}
          {% if block.settings.img %}
            <img src="{{ block.settings.img | img_url: '100x' }}" />
          {% endif %}
        </p>
        {% endif %}
      {% endfor %}
    </div>
  {% endfor %}

</div>

{% schema %}
{
  "name": "Custom Marquee",
  "class": "section",
  "tag": "section",
  "settings": [
    {
      "type": "checkbox",
      "id": "bold",
      "label": "Bold Text"
    },
    {
      "type": "checkbox",
      "id": "small",
      "label": "Use Small Text"
    },
    {
      "type": "header",
      "content": "Colors"
    },
    {
      "type": "color_background",
      "id": "bg",
      "label": "Section Background Color",
      "default": "linear-gradient(270deg, #A3452C 0.1%, #CA5839 50.5%)"
    },
    {
      "type": "color",
      "id": "fg",
      "label": "Section Text Color",
      "default": "#FFFFFF"
    },
    {
      "type": "header",
      "content": "Desktop Padding"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 40
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 40
    },
    {
      "type": "header",
      "content": "Mobile Padding"
    },
    {
      "type": "range",
      "id": "padding_top_mobile",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 20
    },
    {
      "type": "range",
      "id": "padding_bottom_mobile",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 20
    }
  ],
  "blocks": [
    {
      "type": "text",
      "name": "Marquee Text",
      "settings": [
        {
          "type": "text",
          "id": "text",
          "label": "Text"
        },
        {
      "type": "image_picker",
      "id": "img",
      "label": "Repeat Icon"
    }
      ]
    }
  ],
  "presets": [
    {
      "name": "Custom Marquee"
    }
  ]
}
{% endschema %}